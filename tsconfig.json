{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "dist",
    "target": "ES2017",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM", "ES2020"],
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
